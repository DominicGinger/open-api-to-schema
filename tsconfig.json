{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"], 
    "sourceMap": true, 
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
